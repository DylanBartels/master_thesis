\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{titlepage}
\RequirePackage{setspace}

\def\school#1{\gdef\@school{#1}}
\def\@school{\@latex@warning@no@line{No \noexpand\school given}}
\def\project#1{\gdef\@project{#1}}
\def\@project{\@latex@warning@no@line{No \noexpand\project given}}
\def\degree#1{\gdef\@degree{#1}}
\def\@degree{\@latex@warning@no@line{No \noexpand\degree given}}
\def\student#1{\gdef\@student{#1}}
\def\@student{\@latex@warning@no@line{No \noexpand\student given}}
\def\studentnum#1{\gdef\@studentnum{#1}}
\def\@studentnum{\@latex@warning@no@line{No \noexpand\studentnum given}}
\def\supervisor#1{\gdef\@supervisor{#1}}
\def\@supervisor{\@latex@warning@no@line{No \noexpand\supervisor given}}
\def\organization#1{\gdef\@organization{#1}}
\def\@organization{\@latex@warning@no@line{No \noexpand\organization given}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%----------- TITLEPAGE -----------%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand\mytitlepage{
\begin{titlepage}
\setstretch{1.0}
% Defines a new command for the horizontal lines, change thickness here
\newcommand{\HRule}{\rule{\linewidth}{0.5mm}}

\center % Center everything on the page

%%%%%%%%%%%%%%
%--- LOGO ---%
%%%%%%%%%%%%%%
\begin{figure}
\centering
\includegraphics[width=0.2\textwidth]{images/logo.jpg}
\end{figure}
\hfill
\vspace{1cm}

%%%%%%%%%%%%%%
%- HEADING --%
%%%%%%%%%%%%%%

\textsc{\LARGE \@school}\\[2cm] % Name of your university/college
\textsc{\Large \@project}\\[0.5cm] % Major heading such as course name
\textsc{\large \@degree}\\[0.5cm] % Minor heading such as course title

%%%%%%%%%%%%%%
%-- TITLE ---%
%%%%%%%%%%%%%%

\HRule \\[0.6cm]
{\huge \bfseries \@title}\\[0.3cm] % Title of your document
\HRule \\[1.5cm]

%%%%%%%%%%%%%%
%-- AUTHOR --%
%%%%%%%%%%%%%%
\setstretch{1.1}
\begin{minipage}{0.4\textwidth}
\begin{flushleft} \large
{\Large Student Name:} \\
{\Large Student Number:} \\
{\Large Supervisor:} \\
{\Large Host Organization:}
\end{flushleft}
\end{minipage}
~
\begin{minipage}{0.4\textwidth}
\begin{flushright} \large
\@student \\
\@studentnum \\
\@supervisor \\
\@organization
\end{flushright}
\end{minipage}\\[3cm]

%%%%%%%%%%%%%%
%--- DATE ---%
%%%%%%%%%%%%%%
{\large \@date}
\vfill % Fill the rest of the page with whitespace
%
\end{titlepage}
}
\endinput
